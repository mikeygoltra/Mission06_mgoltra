@{
    ViewData["Title"] = "Delete";
}

@model ApplicationResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the entry for @Model.Title ? </h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-outline-secondary">Cancel</a>

    <input type="hidden" asp-for="MovieId"/>
</form>

